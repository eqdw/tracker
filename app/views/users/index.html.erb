<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Company Name</th>
    <th>Userclass</th>
    <th>Phone</th>
  </tr>

  <% for user in @users %>
    <tr>
      <td><%=h user.name %></td>
      <td><%=h user.company_name %> </td>
      <td><%="User is Admin" if user.admin? %></td>
      <td><%=h user.phone %></td>
      <td><%= link_to 'Show', user %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

