<p class="subject">
  
  <h1>
    <b>Subject:</b>
    <%=h @bug.subject %>
  </h1>
</p>

<p class="description">
  <%=h @bug.description %>
</p>

<p class="submitter">
  <b>Submitter:</b>
  <%=h @bug.user.name %>
</p>

<% if @bug.solved %>
  <p>
    <b> This bug has been solved </b>
  </p>
<% end %>

<% if session[:admin] %>
  <%= link_to 'Back', :controller => 'admin', :action => 'index' %>
  
  <% unless @bug.solved %>
    <% form_for(@bug) do |f| %>
      <%= f.check_box :solved %>
      <%= f.submit "Mark as Solved" %>
    <% end %>
  <% end %>
<% else %>
  <%= link_to 'Back', bugs_path %>
<% end %>
